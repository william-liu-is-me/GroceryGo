<FriendEventScreen>:
    name: 'FriendEventScreen'
    id: FriendEventScreen
    FloatLayout:
        canvas.before:
            Color:
                rgba:  161/255,175/255,201/255,1
            Rectangle:
                size:self.size
                pos:self.pos
        
        GridLayout:
            size_hint: 1,0.3
            pos_hint:{'top':1,'right':1}
            cols:2
            ImageButton:
                id: image_to_set
                source: 'icon_px32/girl.png'
            Label:
                id: label_to_set
                text: 'to setup later'
                color: 66/255,76/255,80/255,1
                font_size: 25   
        ScrollView:
            size_hint_x:1
            size_hint_y:0.5
            pos_hint:{'top':0.7,'right':1}
            GridLayout:
                id:ScrollView
                size_hint_y : None
                height: self.minimum_height
                row_default_height : '80dp'
                row_force_default: True
                #if you want to scroll horizontally: rows:1,size_hint_x:None, width:self.minimum_width,col_default_width: '100dp',cols_force_default:True
                cols : 3
                canvas.before:
                    Color:
                        rgba: 210/255,240/255,244/255,1
                    Rectangle:
                        size:self.size
                        pos:self.pos

        GridLayout:
            cols:1
            size_hint: 1,0.3
            pos_hint:{'top':0.3,'right':1}                
            ImageButton:
                source:
                    'icon_px32/return.png'
                #size_hint: None, None
                on_release:
                    app.root.current = 'FriendListScreen'