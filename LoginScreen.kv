
<LoginScreen>:
    name: 'LoginScreen'
    user:user
    passw:passw
    
    FloatLayout:
        canvas:
            Color:
                rgba : 187/255,205/255,197/255,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
              
            text: 'Grocery Go!'
            color: 66/255,76/255,80/255,1
            font_size: 45
            pos_hint: {'center_x':0.5,'y':0.7}
            size_hint: None,None
        
        Image:
            source:'icon_px32/vege.png'
            
            pos_hint:{'center_x':0.3,'y':0.8}
            size_hint: None,None
        Image:
            source:'icon_px32/meat.png'
            
            pos_hint:{'center_x':0.7,'y':0.8}
            size_hint: None,None
        Image:
            source:'icon_px32/bread.png'
            
            pos_hint:{'center_x':0.2,'y':0.7}
            size_hint: None,None
        Image:
            source:'icon_px32/candy.png'
            
            pos_hint:{'center_x':0.8,'y':0.7}
            size_hint: None,None
        Image:
            source:'icon_px32/pizza.png'
            
            pos_hint:{'center_x':0.5,'y':0.8}
            size_hint: None,None
        
        TextInput:
            id:user
            hint_text:'Username'
            font_size: 25
            text:'william'
            background_color:0,0,0,0
            multiline: False
            size_hint: 0.4,0.1
            pos_hint: {'center_x':0.55,'y':0.53}
            
        TextInput:
            id:passw
            hint_text:'Password'
            font_size: 25
            background_color:0,0,0,0
            text:'123'
            multiline: False
            size_hint: 0.4,0.1
            pos_hint: {'center_x':0.55,'y':0.35}
            password: True
        ImageButton:
            source:'icon_px32/login.png'
            size_hint: None, None
            pos_hint: {'center_x':0.25,'y':0.1}
            on_release:
                app.root.current = 'MainScreen' if root.check() else 'LoginScreen'
                root.manager.transition.direction = 'left'
                
                
        Label:
            text: 'Sign in'
            color: 66/255,76/255,80/255,1
            font_size: 15
            pos_hint: {'center_x':0.25,'y':0.05}
            size_hint: None,None

        ImageButton:
            source:'icon_px32/register.png'
            size_hint: None, None
            pos_hint: {'center_x':0.75,'y':0.1}
            on_release:
                app.root.current = 'RegisterScreen'
                root.manager.transition.direction = 'right'
        Label:
            text: 'Register'
            color: 66/255,76/255,80/255,1
            font_size: 15
            pos_hint: {'center_x':0.75,'y':0.05}
            size_hint: None,None