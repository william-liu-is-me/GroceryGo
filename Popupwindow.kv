<LoginPopup>:
    Label:
        text: 'Please check your username and password'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}
        
            
<RegisterPopup>:
    Label:
        text: 'The username has been used'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}

<RegisterPopupSuccess>:
    Label:
        text: 'Registration is completed'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}

<RegisterPopupFailed>:
    Label:
        text: 'Please check your password as it does not match.'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}

<RegisterPopupFailed_no_info>:
    Label:
        text: 'Username and password are empty!'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}

<AddFriendFailed>:
    Label:
        text: 'Friend username is invalid!'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}

<AddFriendSuccess>:
    Label:
        text: 'Friend added!'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}    

<AddEventSuccess>:
    Label:
        text: 'Event is added'
        size_hint:0.6,0.5
        pos_hint:{'x':0.2,'top':1}