<SettingsScreen>:
    name:'SettingsScreen'
    canvas:
        Color:
            rgba : 161/255,175/255,201/255,1
        Rectangle:
            pos:self.pos
            size:self.size
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgba : 187/255,205/255,197/255,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            size_hint:1,0.25
            pos_hint:{'top':1,'right':1}
            cols: 1
            
            ImageButton:
                source:'icon_px32/squid.png'
            
        GridLayout:
            size_hint:1,0.6
            pos_hint:{'top':.75,'right':1}
            cols:2
            rows:2
            ImageButton:
                source:'icon_px32/woman.png'
            LabelButton:
                text:'[b]Change Avator[/b]'
                markup: True
                on_press:
                    self.color= 238/255,222/255,176/255,1
                    
                on_release:
                    self.color= 61/255,59/255,79/255,1
                    #self.color= 61/255,59/255,79/255,1
                    app.root.current = 'ChangeAvatorScreen'
                    root.manager.transition.direction = 'down'    
                color: 66/255,76/255,80/255,1
                font_size: 20
            ImageButton:
                source:'icon_px32/addfriend2.png'
            LabelButton:
                text:'[b]Add Friend[/b]'
                markup: True
                color: 66/255,76/255,80/255,1
                font_size: 20
                on_release:
                    app.root.current = 'AddFriendScreen'
                    root.manager.transition.direction = 'up'
        GridLayout:
            size_hint:1,0.15
            pos_hint:{'top':.15,'right':1}
            cols:1
            ImageButton:
                source:'icon_px32/return.png'
                on_release:
                    app.root.current = 'MainScreen'
                    root.manager.transition.direction = 'right'