<AddEventScreen>:
    
    name: 'AddEventScreen'
    id:AddEventScreen
    canvas.before:
        Color:
            rgba : 237/255,209/255,216/255,1
        Rectangle:
            pos:self.pos
            size:self.size
    
    GridLayout:
        id:desti2
        cols:2
        size_hint:1,0.4
        pos_hint:{'top':1,'x':0}
        
        
    GridLayout:
        cols:2
        size_hint:1,0.4
        pos_hint:{'top':0.6,'x':0}
        TextInput:
            id:comment
            background_color:0,0,0,0
            hint_text: 'Make some comments!'
            multiline:True
            font_size:20
            
        TextInput:
            id:volumn
            on_text:
                self.background_color= (0,0,0,0)
            background_color: (0,0,0,0)
            hint_text: 'Volumn Purchased'
            multiline:False
            font_size:20
            

    GridLayout:
        cols:2
        size_hint:1,0.2
        pos_hint:{'y':0}
        ImageButton:
            source:
                'icon_px32/upload.png'
            on_release:
                self.parent.parent.trytheprint(volumn.text, comment.text, desti2.children[0].source,desti2.children[1].source)
                
        ImageButton:
            source:
                'icon_px32/return.png'
            on_release:
                app.root.current = 'MainScreen'
                root.manager.transition.direction = 'down'



